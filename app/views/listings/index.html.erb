<div class="center">
<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag listing.image.url %><br>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <p><%= listing.tags %></p>
          <p><%= listing.description %></p>
          <%= link_to 'Show', listing, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-default" %>
          <%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
        </div>
     </div>
    </div>
  <% end %>
</div>
</div>

<%= link_to 'New Listing', new_listing_path %>